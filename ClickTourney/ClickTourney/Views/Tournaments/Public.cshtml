@model IEnumerable<ClickTourney.Models.Tournament>
@{
    ViewBag.Title = "Public Tournaments";
}

<!--Code taken from TourneyList.html-->
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Max @Html.DisplayNameFor(model => model.PlayerCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TournamentType)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TournamentType)
            </td>
            <td>
                @Html.ActionLink("Join", "Join", new { id = item.TournamentId })
            </td>
        </tr>
    }

</table>
